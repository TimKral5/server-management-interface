   "bugs": {
      "url": "https://github.com/TimKral5/server-management-interface/issues"
   },
   "homepage": "https://github.com/TimKral5/server-management-interface#readme",
   "dependencies": {
      "archiver": "^7.0.1",
      "cors": "^2.8.5",
      "express": "^4.19.2",
      "mariadb": "^3.3.1",
      "serve": "^14.2.3",
      "systeminformation": "^5.22.11",
      "uuid": "^10.0.0",
      "yaml": "^2.4.5"
   },
   "devDependencies": {
      "@jest/globals": "^29.7.0",
      "@types/jest": "^29.5.12",
      "jest": "^29.7.0",
      "sass": "^1.77.6",
      "xmlhttprequest": "^1.8.0"
   }
