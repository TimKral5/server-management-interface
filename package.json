{
   "name": "smi",
   "version": "1.0.0",
   "description": "Server Management Interface",
   "main": "index.js",
   "type": "module",
   "scripts": {
      "build-styles-templates": "cd styles && node index.js",
      "build-styles": "cd styles && sass components/__index.scss ../out/styles/style.css",
      
      "backend": "node backend/index.js",
      "backend-lib": "mkdir -p out/lib/ && cp backend/client/api.js out/lib/api.js",
      "styles": "npm run build-styles-templates && npm run build-styles",
      "dev": "serve out/",

      "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/TimKral5/server-management-interface.git"
   },
   "keywords": [],
   "author": "",
